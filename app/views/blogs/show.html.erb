<h1>詳細</h1>
<div class="title">
  <h5>タイトル</h5>
  <p><%= @blog.title %></p>
</div>
<div class="content">
  <h5>内容</h5>
  <p class="word-limit"><%= @blog.content %></p>
</div>
<div class= "updated_at">
  <p>更新日時: <%= @blog.updated_at.to_s(:datetime_jp)%></p>
</div>
<br>
<%= link_to "編集", edit_blog_path, class: "btn btn-primary" %>
<%= link_to "削除", blog_path(@blog.id), class: "btn btn-danger", method: :delete, data: {confirm: "本当に削除しますか?"} %>
<%= link_to "一覧", blogs_path, class: "btn btn-success" %>