<h1>Blogs#index</h1>

<table class="table">
  <tr>
    <th>タイトル</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= link_to "詳細", blog_path(blog.id) %></td>
      <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
      <td><%= link_to "削除", blog_path(blog.id), method: :delete, data: {confirm: "本当に削除しましか?"}  %></td>
    </tr>
  <% end %>
</table>

<%= link_to "新規投稿", new_blog_path, method: :get, class: "btn btn-primary" %>